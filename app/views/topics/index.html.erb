<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>トピック一覧</h1>
    <%= render 'form' %>
    <% @topics.each do |topic| %>
      <div class="row">
        <%= link_to profile_img(topic.user), topic.user %>
        <strong><%= link_to topic.user.name, topic.user %></strong>
        <p>作成日時：<%= topic.created_at.strftime("%Y/%m/%d %R") %></p>
        <p>投稿内容：<%= topic.content %></p>
        <div class="field">
          <% if topic.image? %>
            <p>画像:<%= image_tag topic.image.url %></p>
          <% end %>
        </div>
        <%= link_to "コメントする", topic_path(topic), class: 'btn btn-primary' %>
        <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>

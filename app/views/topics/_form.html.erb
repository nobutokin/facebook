<%= form_for(@topic) do |f| %>
  <%= f.error_messages! %>

  <br>
  <p class="left"><%= link_to profile_img(current_user), current_user %></p>

  <%= f.text_field :content, class: 'form-control', placeholder: '今なにしてる？' %>

  <% unless @topic.image.url.blank? %>
    <%= f.label :現在の画像 %>
    <%= image_tag @topic.image.url %>
  <% end %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>

  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
